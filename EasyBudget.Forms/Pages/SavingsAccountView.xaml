<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="EasyBudget.Forms.Pages.SavingsAccountView" Title="Account">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="10,40,0,0" />
            <On Platform="Android" Value="10,0,0,0" />
        </OnPlatform>
    </ContentPage.Padding> 
    
	<ContentPage.Content>
        <StackLayout Spacing="10">
            <StackLayout VerticalOptions="FillAndExpand">
                <Label Text="Bank Name" FontAttributes="Bold"></Label>
                <Label Text="{Binding BankName}" ></Label>
                <Label Text="Routing Number" FontAttributes="Bold"></Label>
                <Label Text="{Binding RoutingNumber}"></Label>
                <Label Text="Account Number" FontAttributes="Bold"></Label>
                <Label Text="{Binding AccountNumber}"></Label>
                <Label Text="Balance" FontAttributes="Bold"></Label>
                <Label Text="{Binding CurrentBalance, StringFormat='{0:C}'}"></Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="Back" Text="Close" Clicked="OnBackClicked" WidthRequest="150"></Button>
            </StackLayout>

        </StackLayout>
	</ContentPage.Content>
</ContentPage>
